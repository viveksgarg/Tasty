<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tasty" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/atomicTangerine</item>
        <item name="colorPrimaryVariant">@color/coral</item>
        <item name="colorOnPrimary">@color/my_color_on_primary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Tasty" parent="Base.Theme.Tasty" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/atomicTangerine</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_tasty</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Tasty</item>
    </style>

    <style name="Theme.Tasty.ActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/atomicTangerine</item>
        <item name="colorPrimaryVariant">@color/coral</item>
        <item name="colorOnPrimary">@color/coral</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.Background" parent="Base.Theme.Tasty">
        <item name="android:backgroundTint">@color/bg_color</item>
    </style>
</resources>